<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cl.eugcom.cajachica">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher_eugcom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_eugcom_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CajaChica"
        android:usesCleartextTraffic="true">
        <activity android:name=".Project.View.CreateNewUser" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.CategoryMenu" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.CuentaUsuario" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.ListadoGastos" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.ListadoIngreso" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.FormGasto" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.FormIngreso" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.MainScreenActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Project.View.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>